<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/in_cardview_padding">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/currency_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dollar_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Американский доллар"
                style="@style/TextStyle"
                tools:text="Американский доллар" />

            <TextView
                android:id="@+id/currency_charcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD"
                style="@style/TextStyle"
                tools:text="USD" />

            <TextView
                android:id="@+id/currency_nominal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Номинал: 100"
                style="@style/TextStyle"
                tools:text="Номинал: 100" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currency_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="51,3914"
                style="@style/TextStyle"
                tools:text="51,3914" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currency_icon_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rubble_text"
                style="@style/TextStyle"/>


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>